<h1>Listing pins</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>User_email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= pin.user.email if pin.user %></td>
        <td><%= link_to 'Mostrar', pin_path(pin) %></td>
        <% if pin.user == current_user %>
          <td><%= link_to 'Editar', edit_pin_path(pin) %></td>
          <td><%= link_to 'Deletar', pin, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
          <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
 <%= link_to 'Criar Pin', new_pin_path %>
<% end %>
